{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run in RoboFont",
        "type": "shell",
        "command": "roboFont",
        "args": ["-p", "${file}"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Run Current Python File",
        "type": "shell",
        "command": "python3",
        "args": ["${file}"],
      },
      {
        "label": "Run Current Coldtype File",
        "type": "shell",
        "command": "coldtype",
        "args": ["${file}"],
      },
    ]
  }
  